import kotlin.Int;
import kotlin.String;
import kotlin.collections.List;
import kotlin.Boolean;

CREATE TABLE IF NOT EXISTS SavedPost(
  shortId TEXT NOT NULL PRIMARY KEY,
  title TEXT NOT NULL,
  url TEXT NOT NULL,
  createdAt TEXT NOT NULL,
  commentCount INTEGER AS Int,
  commentsUrl TEXT NOT NULL,
  submitterName TEXT NOT NULL,
  tags TEXT AS List<String> NOT NULL,
  description TEXT NOT NULL DEFAULT "",
  userIsAuthor INTEGER AS Boolean NOT NULL DEFAULT 0
);

insertOrReplacePost:
INSERT OR REPLACE
INTO SavedPost
VALUES ?;

selectAllPosts:
SELECT *
FROM SavedPost;

selectPostsFromLastNDays:
SELECT *
FROM SavedPost
WHERE datetime(createdAt) >= datetime('now', '-' || ? || ' days');

selectCount:
SELECT COUNT(*)
FROM SavedPost;

deleteAllPosts:
DELETE
FROM SavedPost;

deletePost:
DELETE
FROM SavedPost
WHERE shortId = ?;

postExists:
SELECT EXISTS(
  SELECT 1
  FROM SavedPost
  WHERE shortId = ?
);

selectRecentPosts:
SELECT *
FROM SavedPost
ORDER BY datetime(createdAt) DESC
LIMIT :limit;

selectAllPostsSortedByDate:
SELECT *
FROM SavedPost
ORDER BY datetime(createdAt) DESC;
